#!/usr/bin/env ruby
# coding: utf-8

if $0 == __FILE__
  require 'pathname'
  root = Pathname.new(__FILE__).realpath.parent.parent
  $:.unshift root.join('lib')
end

require 'ydocx'

if file = ARGV.first
  unless File.exist?(file) and File.extname(file).match(/^\.docx$/)
    exit
  else
    options = {}
    # TODO args handling
    if true
      require 'templates/fachinfo'
    end
    YDocx::Document.open(file).to_xml file, options
  end
end
