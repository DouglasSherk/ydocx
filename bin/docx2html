#!/usr/bin/env ruby
# coding: utf-8

if $0 == __FILE__
  require 'pathname'
  root = Pathname.new(__FILE__).realpath.parent.parent
  %w(
    lib/docx2html/lib
    lib
  ).each do |lib|
    $:.unshift root.join(lib)
  end
  require 'docx2html'
else
  require 'docx2html/lib/docx2html'
end

if file = ARGV.first
  unless File.exist?(file)
    exit
  else
    # TODO args handling
    if true
      require 'fachinfo'
    end
    options = {
      :style => :frame
    }
    Docx2html::Document.open(file).to_html file, options
  end
end
