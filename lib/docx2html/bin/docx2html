#!/usr/bin/env ruby
# coding: utf-8

require 'pathname'

root = Pathname.new(__FILE__).realpath.parent.parent
$:.unshift root.join('lib/docx2html') if $0 == __FILE__
require 'docx2html'

if file = ARGV.first
  unless File.exist?(file)
    exit
  else
    Docx2html::Document.open(file).to_html file, :style => true
  end
end
